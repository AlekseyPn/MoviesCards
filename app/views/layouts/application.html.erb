<!DOCTYPE html>
<html>
  <head>
    <title>Флэшкарточкер</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section id="container" class="container">

      <header class="navbar navbar-dark bg-dark row">
        <h1 class="text-light">Флэшкарточкер</h1>
        <ul class="nav nav-pills">
          <li class="nav-item"><%= link_to 'Все карточки', '#', class: 'nav-link text-light' %></li>
          <li class="nav-item"><%= link_to 'Добавить карточку', '#', class: 'nav-link text-light' %></li>
        </ul>
      </header>

      <section>        
        <%= yield %>
      </section>

    </section>
  </body>
</html>
